<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1.25" y="1.5" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!-- Layer0, the deepest cards. -->

	<!-- Layer1, the next level. -->
	
	<slot id="1" x="-9" y="0" faceup="1" layer="0" />
	<slot id="2" x="-6" y="0" faceup="0" layer="0" />
	<slot id="3" x="-3" y="0" faceup="0" layer="0" />
	<slot id="4" x="0" y="0" faceup="0" layer="0" />
	<slot id="5" x="3" y="0" faceup="0" layer="0" />
	<slot id="6" x="6" y="0" faceup="0" layer="0" />
	<slot id="7" x="9" y="0" faceup="0" layer="0" />
	
	
	<!-- Layer2, the next level. -->
	<slot id="14" x="-6" y="-.5" faceup="1" layer="1" />
	<slot id="15" x="-3" y="-.5" faceup="0" layer="1" />
	<slot id="16" x="0" y="-.5" faceup="0" layer="1" />
	<slot id="17" x="3" y="-.5" faceup="0" layer="1" />
	<slot id="18" x="6" y="-.5" faceup="0" layer="1" />
	<slot id="19" x="9" y="-.5" faceup="0" layer="1" />

	
	
	<!-- Layer3, the top level. -->
	<slot id="20" x="-3" y="-1" faceup="1" layer="2" />
	<slot id="21" x="0" y="-1" faceup="0" layer="2" />
	<slot id="22" x="3" y="-1" faceup="0" layer="2" />
	<slot id="23" x="6" y="-1" faceup="0" layer="2" />
	<slot id="24" x="9" y="-1" faceup="0" layer="2" />
	
	<!--- Layer4-->
	<slot id="25" x="0" y="-1.5" faceup="1" layer="3" />
	<slot id="26" x="3" y="-1.5" faceup="0" layer="3" />
	<slot id="27" x="6" y="-1.5" faceup="0" layer="3" />
	<slot id="28" x="9" y="-1.5" faceup="0" layer="3" />
	
	<!---Layer5-->
	<slot id="29" x="3" y="-2" faceup="1" layer="4" />
	<slot id="30" x="6" y="-2" faceup="0" layer="4" />
	<slot id="31" x="9" y="-2" faceup="0" layer="4" />
	
	<!--Layer 6-->
	<slot id="32" x="6" y="-2.5" faceup="1" layer="5" />
	<slot id="33" x="9" y="-2.5" faceup="0" layer="5" />
	
	<!--Layer7-->
	<slot id="34" x="9" y="-3" faceup="1" layer="6" />
	
	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="-9" y="4" xstagger="0" layer="8" />
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="-6" y="4" layer="9" />
	
</xml>
	
